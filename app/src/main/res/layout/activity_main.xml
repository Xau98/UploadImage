<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image Server"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_margin="10dp"
        android:layout_marginTop="0dp"
        >
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/progress_bar_notification"
            android:background="@android:color/transparent"
            style="@android:style/Widget.ProgressBar.Horizontal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:id="@+id/status_load_notification"
            android:text="Đang chuẩn bị... "
            android:textColor="@color/black"/>

    </RelativeLayout>
    <Button
        android:layout_marginTop="25dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/bt_upload"
        android:layout_marginBottom="15dp"
        android:text="Upload"
        />
    <Button
        android:layout_marginTop="25dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/bt_download"
        android:layout_marginBottom="15dp"
        android:text="Download"
        />

    <Button
        android:layout_marginTop="25dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/bt_getAllAlbum"
        android:layout_marginBottom="15dp"
        android:text="Get All Album"
        />
    <Button
        android:layout_marginTop="25dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/bt_getImage"
        android:layout_marginBottom="15dp"
        android:text="Get Image in Album"
        />


</LinearLayout>